{
  "name": "actividadu2laboratorio",
  "version": "1.0.0",
  "description": "Aplicación web Node.js/Express para demostración de pipelines CI/CD",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage --forceExit",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "build": "echo 'Build step: no transpilation required for plain Node.js' && exit 0"
  },
  "keywords": ["devops", "cicd", "nodejs", "express"],
  "author": "actividadU2Laboratorio",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": ["text", "lcov", "clover"]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
